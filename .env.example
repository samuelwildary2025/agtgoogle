# ===========================================
# LLM Configuration - Google Gemini
# ===========================================
LLM_PROVIDER=google
LLM_MODEL=gemini-2.0-flash-lite
LLM_TEMPERATURE=0.0
GOOGLE_API_KEY=SUA_GOOGLE_API_KEY_AQUI

# Se quiser usar OpenAI, descomente:
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o-mini
# OPENAI_API_KEY=sua_openai_api_key

# ===========================================
# PostgreSQL
# ===========================================
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/dbname
POSTGRES_TABLE_NAME=memoria
POSTGRES_MESSAGE_LIMIT=8

# ===========================================
# Redis
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# API do Supermercado
# ===========================================
SUPERMERCADO_BASE_URL=https://seu-supermercado-api.com
SUPERMERCADO_AUTH_TOKEN=seu_token_aqui

# ===========================================
# WhatsApp / UAZ API
# ===========================================
WHATSAPP_TOKEN=seu_whatsapp_token
WHATSAPP_API_URL=https://api.uaz.io
WHATSAPP_METHOD=POST

# ===========================================
# Server
# ===========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG_MODE=false
LOG_LEVEL=INFO
